{
  "appId": "com.wildcat.csvreorderer",
  "productName": "WildCAT",
  "copyright": "Copyright Â© 2024",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json"
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/icon.png",
    "darkModeSupport": true,
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "zip",
        "arch": ["x64", "ia32"]
      }
    ],
    "icon": "public/icon.png",
    "artifactName": "${productName}-${version}-${arch}-setup.${ext}"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "deb",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "rpm",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/icon.png",
    "category": "Office",
    "synopsis": "CSV column reorderer with drag-and-drop interface",
    "description": "Reorder CSV columns with drag-and-drop interface. Save favorite arrangements and export reordered files."
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "WildCAT",
    "artifactName": "${productName}-${version}-${arch}-setup.${ext}"
  },
  "dmg": {
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "window": {
      "width": 540,
      "height": 380
    }
  }
}
